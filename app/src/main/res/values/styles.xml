<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Input Layout Styles -->
    <style name="Widget.Stepwise.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_corner_radius</item>
        <item name="hintTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:minHeight">@dimen/input_min_height</item>
    </style>

    <style name="Widget.Stepwise.TextInputLayout.Filled" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="hintTextColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.Stepwise.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Widget.Stepwise.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="Widget.Stepwise.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Material Button (legacy support) -->
    <style name="Widget.Stepwise.MaterialButton" parent="Widget.Stepwise.Button" />

    <!-- Card View Styles -->
    <style name="Widget.Stepwise.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/spacing_base</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="Widget.Stepwise.CardView.Outlined" parent="Widget.Stepwise.CardView">
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">?attr/colorOutline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.Stepwise.CardView.Elevated" parent="Widget.Stepwise.CardView">
        <item name="cardElevation">@dimen/card_elevation_raised</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.Stepwise.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">8dp</item>
        <item name="chipBackgroundColor">?attr/colorPrimaryContainer</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Stepwise.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">8dp</item>
        <item name="chipBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- FAB Styles -->
    <style name="Widget.Stepwise.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Stepwise.FAB</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="elevation">6dp</item>
        <item name="hoveredFocusedTranslationZ">8dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <style name="ShapeAppearance.Stepwise.FAB" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="Widget.Stepwise.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color_state</item>
        <item name="itemTextColor">@color/bottom_nav_color_state</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.Stepwise.BottomNavigationView.ActiveIndicator</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="Widget.Stepwise.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorPrimaryContainer</item>
    </style>

    <!-- Progress Indicator -->
    <style name="Widget.Stepwise.CircularProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">?attr/colorPrimary</item>
        <item name="trackThickness">4dp</item>
        <item name="indicatorSize">48dp</item>
    </style>

    <style name="Widget.Stepwise.LinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="indicatorColor">?attr/colorPrimary</item>
        <item name="trackThickness">4dp</item>
        <item name="trackCornerRadius">2dp</item>
    </style>
</resources>