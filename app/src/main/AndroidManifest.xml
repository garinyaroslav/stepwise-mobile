<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:name=".App"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/primary_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/primary_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Stepwisemobile">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.github.stepwise.ui.viewer.PdfViewerActivity"
            android:exported="false"
            android:label="PDF Viewer" />
        <activity
            android:name=".StudentActivity"
            android:exported="false" />
        <activity
            android:name=".TeacherActivity"
            android:exported="false" />

    </application>

</manifest>